// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator enum {
  provider = "node ./dist/index.js"
}

enum Role {
  ADMIN
  MODERATOR
  USER
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  role  Role
}
